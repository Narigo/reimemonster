{
  "name": "reimemonster",
  "version": "0.1.0",
  "description": "Counts syllables in texts.",
  "main": "src/module/index.mjs",
  "scripts": {
    "coverage": "jest --coverage",
    "build-demo": "rollup demo-worker.mjs -o demo-worker.js -f es",
    "demo": "python server.py",
    "format": "prettier --write **/*.{m,}js",
    "rhyme": "node --experimental-modules src/cli/cli-find.mjs",
    "start": "node --experimental-modules src/cli/cli-poem.mjs --validate",
    "test": "jest"
  },
  "engines": {
    "node": ">=8.6.0"
  },
  "keywords": [],
  "author": "Joern Bernhardt <jb@campudus.com> (http://www.campudus.com)",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-jest": "^22.0.4",
    "babel-preset-env": "^1.6.1",
    "coveralls": "^3.0.0",
    "jest": "^22.0.4",
    "prettier": "^1.9.2",
    "rollup": "^0.54.1"
  },
  "dependencies": {
    "hyphen": "^1.0.2",
    "split": "^1.0.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "node",
      "mjs"
    ],
    "testMatch": [
      "**/__tests__/**/*.js?(x)",
      "**/?(*.)(spec|test).js?(x)",
      "**/__tests__/**/*.mjs",
      "**/?(*.)(spec|test).mjs"
    ],
    "transform": {
      "^.+\\.m?jsx?$": "babel-jest"
    }
  }
}
